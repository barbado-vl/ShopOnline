@page "/signup"
@inherits SignUpBase

<div>
    <br /><br /><br /><br /><br />
</div>
<div>
    <h3 style="font-weight:bold; color:purple">ShopOnline Sing up</h3>
</div>
<div>
    <br />
</div>
<div class="col-12 row">
    <input class="form-control col-12" type="text" placeholder="account name" @bind=AccountName/>
</div>
<br />
<div class="col-12 row">
    <input type="password" class="form-control col-12" placeholder="password" @bind=Password/>
</div>
<br />
<div class="col-12 row">
    <input type="password" class="form-control col-12" placeholder="confirm password" @bind=ConfirmPassword/>
</div>
<br />
<div class="col-12 row">
    <span class="col-12"></span>
        <button 
            class="form-control col-6 btn btn-primary"
            @onclick="(() => SignUp_Click())"
    >Sign up</button>
</div>
<br />
<div class="col-12 row" style="text-align:left; font-weight:bold">
    <span class="col-12">@Message</span>
</div>

